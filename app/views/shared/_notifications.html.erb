<li class="nav-item dropdown">
  <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <h6>
      <span class="badge badge-danger dropdown-toggle">
        <%= current_user.unread_notifications_count %>
      </span>
    </h6>
  </a>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
    <% if current_user.unread_notifications_count.zero? %>
      <div class="dropdown-item">
        There are no unread notifications!
      </div>
    <% else %>
      <% current_user.last_five_notifications.each do |note| %>
        <div class="dropdown-item">
          <%= note.dropdown_text %>
          <div><%= link_to 'mark as read', '#', class: 'muted-text caption-text' %></div>
        </div>
      <% end %>
      <div class="dropdown-divider"></div>
      <%= link_to 'view all', '#', class: 'dropdown-item' %>
      <%= link_to 'mark all as read', '#', class: 'dropdown-item' %>
    <% end %>
  </div>
</li>
