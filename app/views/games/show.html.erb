<div class="d-flex justify-content-center">
  <div class="col-lg-6">
    <div class="game-actions">
      <%= link_to 'Return to League', league_path(@game.league), class: 'btn btn-outline-primary btn-sm mb-2 mr-2' %>
      <% if policy(@game).user_is_admin? %>
        <% if @game.completed? %>
          <%= button_to 'Uncomplete Game', '#', class: 'btn btn-outline-info btn-sm mb-2' %>
        <% else %>
          <%= button_to 'Complete Game', complete_game_path(@game), class: 'btn btn-outline-danger btn-sm mb-2', disabled: @game.not_enough_players? %>
        <% end %>
      <% end %>
    </div>
    <div class="card border-primary mb-4">
      <div class="card-header header-text border-primary text-primary">
        <h5 class="user-header-text">Date: <%= @game.formatted_full_date %></h5>
        <div class="caption-text">Buy In: <%= number_to_currency(@game.buy_in) %></div>
        <div class="caption-text">Season #<%= @game.season_league_season_number %></div>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item header-text user-header-text">
          Standings
        </li>
        <% @game.players.in_place.each do |player, index| %>
          <%= link_to user_stats_path(user_id: player.user_id, season: @game.season_id), class: 'list-group-item list-group-item-action stat-line' do %>
            <%= "#{player.finishing_place}. #{player.user_full_name}" %>
            <div class="caption-text text-info">
              Score: <%= player.score %>
              <% if player.has_additional_expense? %>
                | Rebuy or Add-on: <%= number_to_currency(player.additional_expense, precision: 0) %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <% if @game.not_completed? %>
          <div class="list-group-item list-group-item-action stat-line">
          <%= form_for Player.new(game: @game) do |f| %>
            <%= f.select :user_id, @game.available_players, { prompt: 'Choose a Player' }, { class: 'form-control user-select' } %>
          <% end%>
          </div>
        <% end%>
      </ul>
    </div>
  </div>
</div>
