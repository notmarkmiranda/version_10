<li class="list-group-item <%= notification.read_at_class %>">
  <div class="stat-line">
    <%= notification.dropdown_text %>
  </div>
  <div class="caption-text">
    <%= time_ago_in_words(notification.created_at) %> ago
    <% unless notification.read_at %>
      <%= link_to 'mark as read', '#' %>
    <% end %>
  </div>
</li>
