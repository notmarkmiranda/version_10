<div class="d-flex justify-content-center">
  <div class="col-lg-6">
    <div class="game-actions">
      <%= link_to 'Return to League', league_path(@game.league), class: 'btn btn-outline-primary btn-sm mb-2 mr-2' %>
      <%= @game.complete_or_uncomplete_buttons %>
    </div>
    <div class="card border-primary mb-4">
      <div class="card-header header-text border-primary text-primary">
        <h5 class="user-header-text">Date: <%= @game.formatted_full_date %></h5>
        <div class="caption-text">Buy In: <%= number_to_currency(@game.buy_in) %></div>
        <div class="caption-text">Season #<%= @game.season_league_season_number %></div>
      </div>
      <ul class="list-group list-group-flush standings-list">
        <li class="list-group-item header-text user-header-text">
          Standings
        </li>
        <% @game.players.in_place.decorate.each do |player, index| %>
          <%= link_to user_stats_path(user_id: player.user_id, season: @game.season_id), class: 'list-group-item list-group-item-action stat-line standing' do %>
            <div>
              <%= player.name_with_place %>
              <div class="caption-text text-info">
                <%= player.score_text %>
              </div>
            </div>
            <% unless player.finished_at %>
              <%= button_to 'Score Player', player_path(player, commit: 'Score Player'), method: :patch, class: 'btn btn-outline-info btn-sm' %>
            <% end %>
          <% end %>
        <% end %>
        <% if @game.not_completed? %>
          <div class="list-group-item list-group-item-action stat-line">
            <%= form_for Player.new(game: @game) do |f| %>
              <div class="form-group">
                <%= f.select :user_id, @game.available_players, { prompt: 'Choose a Player' }, { class: 'form-control user-select' } %>
              </div>
              <div class="form-group">
                <%= f.label :additional_expense, 'Rebuy or Add-on' %>
                <%= f.text_field :additional_expense, class: 'form-control' %>
              </div>
              <%= f.submit 'Rebuy or Add-on Only', class: 'btn btn-outline-info btn-block' %>
              <%= f.submit 'Score Player', class: 'btn btn-outline-primary btn-block' %>
            <% end%>
          </div>
        <% end%>
      </ul>
    </div>
  </div>
</div>
